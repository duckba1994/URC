<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".ui.scanin.ScanInFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="SCAN IN"
                android:textAlignment="center"
                android:theme="@style/label_head_tital" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:text="RFID : "
                android:theme="@style/label_content" />

            <EditText
                android:id="@+id/txt_rfid"
                android:layout_width="169dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_taxt_readonly_shape"
                android:enabled="false"
                android:inputType="textPersonName"
                android:text="" />

            <Button
                android:id="@+id/btn_search_rfid"
                style="@style/AppTheme.btn_search"
                android:layout_width="48dp"
                android:layout_height="40dp"
                android:text="..." />

            <CheckBox
                android:id="@+id/chk_rfid"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="LOT."
                android:theme="@style/label_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:text="B/C.NO : "
                    android:theme="@style/label_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <EditText
                        android:id="@+id/txt_bc_ref1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text_shape"
                        android:inputType="textPersonName"
                        android:text="" />

                    <EditText
                        android:id="@+id/txt_bc_ref2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text_shape"
                        android:inputType="textPersonName"
                        android:text="" />
                </TableRow>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="right|center_vertical"
                android:text="Product : "
                android:theme="@style/label_content" />

            <EditText
                android:id="@+id/txt_product_ref1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_taxt_readonly_shape"
                android:enabled="false"
                android:inputType="textPersonName"
                android:text="" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="right|center_vertical"
                android:text="" />

            <EditText
                android:id="@+id/txt_product_ref2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_shape"
                android:inputType="textPersonName"
                android:text="" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:gravity="right|center_vertical"
                    android:text="FROM : "
                    android:theme="@style/label_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">


                    <EditText
                        android:id="@+id/txt_from_ref1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_taxt_readonly_shape"
                        android:enabled="false"
                        android:inputType="textPersonName"
                        android:text="" />

                    <EditText
                        android:id="@+id/txt_from_ref2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="2"
                        android:background="@drawable/edit_text_shape"
                        android:inputType="textPersonName"
                        android:text="" />
                </TableRow>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:gravity="right|center_vertical"
                    android:text="RACK : "
                    android:theme="@style/label_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <EditText
                        android:id="@+id/txt_rack"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_taxt_readonly_shape"
                        android:enabled="false"
                        android:inputType="textPersonName"
                        android:text="" />
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="LOC : "
                        android:textAlignment="center"
                        android:theme="@style/label_content" />
                    <EditText
                        android:id="@+id/txt_loc"
                        android:layout_width="66dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_shape"
                        android:inputType="textPersonName"
                        android:text="" />
                    <Button
                        android:id="@+id/btn_clear"
                        style="@style/AppTheme.btn_search"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:text="Clear"
                        android:textSize="11dp" />
                </TableRow>
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:theme="@style/label_content"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:gravity="right|center_vertical"
                    android:text="DOC No : " />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">
                    <EditText
                        android:layout_weight="1"
                        android:id="@+id/txt_doc_no"
                        android:background="@drawable/edit_text_shape"
                        android:layout_width="235dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:text="" />
                    <Button
                        android:layout_weight="2"
                        style="@style/AppTheme.btn_search"
                        android:id="@+id/btn_search_doc"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="..." />
                </TableRow>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">


                <TextView
                    android:theme="@style/label_content"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:gravity="right|center_vertical"
                    android:text="Product : " />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">
                    <EditText
                        android:id="@+id/txt_product_name"
                        android:background="@drawable/edit_text_shape"
                        android:layout_width="235dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:text="" />
                    <Button
                        android:layout_weight="2"
                        style="@style/AppTheme.btn_search"
                        android:id="@+id/btn_search_product"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="..." />
                </TableRow>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">
            <TextView
                android:theme="@style/label_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Update QTY"
                android:textAlignment="center" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:theme="@style/label_content"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:gravity="right|center_vertical"
                    android:text="QTY = "
                     />

                <TextView
                    android:id="@+id/txt_qty_total"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:text="0"
                    android:textAlignment="center" />
                <TextView
                    android:theme="@style/label_content"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="NEW = "
                    android:textAlignment="center" />
                <EditText
                    android:background="@drawable/edit_taxt_readonly_shape"
                    android:id="@+id/txt_qty_total_new"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="" />
                <Button
                    style="@style/AppTheme.btn_update"
                    android:id="@+id/btn_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="EDIT" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <Button
                    style="@style/AppTheme.btn_insert"
                    android:id="@+id/btn_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NEW" />
                <Button
                    style="@style/AppTheme.btn_update"
                    android:id="@+id/btn_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UPDATE" />
                <Button
                    style="@style/AppTheme.btn_retrun"
                    android:id="@+id/btn_retrun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RETRUN" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>